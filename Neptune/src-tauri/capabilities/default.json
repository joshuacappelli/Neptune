{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "main-capability",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "$APPCONFIG"
        },
        {
          "path": "$APPCONFIG/**"
        },
        {
          "path": "$APPCONFIG/config.json"
        },
        {
          "path": "$APPDATA"
        },
        {
          "path": "$APPDATA/**"
        },
        {
          "path": "$APPDATA/config.json"
        },
        {
          "path": "$DATA"
        },
        {
          "path": "$DATA/**"
        },
        {
          "path": "$DATA/Neptune"
        }
      ]
    },
    {
      "identifier": "fs:allow-exists",
      "allow": [
        {
          "path": "$APPCONFIG"
        },
        {
          "path": "$APPCONFIG/**"
        },
        {
          "path": "$APPCONFIG/config.json"
        },
        {
          "path": "$APPDATA/**"
        },
        {
          "path": "$APPDATA/config.json"
        },
        {
          "path": "$DATA"
        },
        {
          "path": "$DATA/**"
        },
        {
          "path": "$DATA/Neptune"
        }
      ]
    },
    {
      "identifier": "fs:allow-app-write",
      "allow": [
        {
          "path": "$APPCONFIG"
        },
        {
          "path": "$APPCONFIG/**"
        },
        {
          "path": "$APPCONFIG/config.json"
        },
        {
          "path": "$APPDATA"
        },
        {
          "path": "$APPDATA/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-app-write-recursive",
      "allow": [
        {
          "path": "$APPCONFIG"
        },
        {
          "path": "$APPCONFIG/**"
        },
        {
          "path": "$APPCONFIG/config.json"
        },
        {
          "path": "$APPDATA"
        },
        {
          "path": "$APPDATA/**"
        }
      ]
    },
    {
      "identifier": "core:path:default",
      "allow": [
        {
          "path": "$APPCONFIG"
        },
        {
          "path": "$APPCONFIG/**"
        },
        {
          "path": "$APPCONFIG/config.json"
        },
        {
          "path": "$APPDATA"
        },
        {
          "path": "$APPDATA/**"
        }
      ]
    },
    "store:default"
  ]
}